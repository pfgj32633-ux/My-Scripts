-- GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = UNIQUE_GUI_NAME
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = CoreGui

local TextLabel = Instance.new("TextLabel")
TextLabel.Parent = ScreenGui
TextLabel.Size = UDim2.new(0.9, 0, 0.18, 0)
TextLabel.Position = UDim2.new(0.05, 0, 0.75)
TextLabel.BackgroundTransparency = 1
TextLabel.Text = ""
TextLabel.TextWrapped = true
TextLabel.Font = Enum.Font.GothamBold
TextLabel.TextScaled = false
TextLabel.TextSize = 30
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.TextStrokeTransparency = 0

-- üîä SOUND (ƒë·∫∑t TRONG GUI ƒë·ªÉ destroy c√πng)
local Sound = Instance.new("Sound")
Sound.SoundId = TypingSoundId
Sound.Volume = 1
Sound.Parent = ScreenGui

-- ===== HI·ªÜN CH·ªÆ =====
for i = 1, #TextToShow do
	TextLabel.Text = TextToShow:sub(1, i)
	Sound:Stop()
	Sound.TimePosition = 0
	Sound:Play()
	task.wait(TypingSpeed)
end

-- ‚è≥ ƒê·ª¢I
task.wait(WaitBeforeDelete)

-- ===== XO√Å CH·ªÆ NG∆Ø·ª¢C =====
for i = #TextToShow, 0, -1 do
	TextLabel.Text = TextToShow:sub(1, i)
	Sound:Stop()
	Sound.TimePosition = 0
	Sound:Play()
	task.wait(DeleteSpeed)
end

-- üßπ CLEANUP TUY·ªÜT ƒê·ªêI
pcall(function()
	TextLabel.Text = ""
	Sound:Stop()
	Sound:Destroy()
	TextLabel:Destroy()
	ScreenGui:Destroy()
end)

-- üíÄ SCRIPT K·∫æT TH√öC ‚Äì KH√îNG C√íN G√å T·ªíN T·∫†I
