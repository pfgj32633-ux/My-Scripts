-- Basalt Wardrobes
-- DOORS | CONVERT ALL WARDROBES TO METAL (MULTI-WARDROBE FIX)
-- AUTO APPLY FOR EVERY ROOM

local Rooms = workspace:WaitForChild("CurrentRooms")
local GameData = game.ReplicatedStorage:WaitForChild("GameData")
local LatestRoom = GameData:WaitForChild("LatestRoom")

-- CONFIG
local METAL_COLOR = Color3.fromRGB(171, 171, 171)
local HIDE_DURATION = 1.5

local SOUND_ENTER_ID = "rbxassetid://4416839551"
local SOUND_EXIT_ID  = "rbxassetid://75433549183486"

local function ConvertWardrobe(wardrobe)
    -- ===== WOOD ‚Üí METAL =====
    local woodParts = {
        "Door1",
        "Door2",
        "Main",
        "Wood"
    }

    for _, partName in ipairs(woodParts) do
        local part = wardrobe:FindFirstChild(partName, true)
        if part and part:IsA("BasePart") then
            pcall(function()
                part.Material = Enum.Material.Basalt
                part.Color = METAL_COLOR
            end)
        end
    end

    -- ===== SOUND =====
    local main = wardrobe:FindFirstChild("Main", true)
    if main then
        local enterSound = main:FindFirstChild("SoundEnter")
        if enterSound and enterSound:IsA("Sound") then
            enterSound.SoundId = SOUND_ENTER_ID
        end

        local exitSound = main:FindFirstChild("SoundExit")
        if exitSound and exitSound:IsA("Sound") then
            exitSound.SoundId = SOUND_EXIT_ID
        end
    end

    -- ===== HIDE PROMPT =====
    local prompt = wardrobe:FindFirstChild("HidePrompt", true)
    if prompt then
        prompt.HoldDuration = HIDE_DURATION
    end
end

local function ProcessRoom(room)
    local assets = room:FindFirstChild("Assets")
    if not assets then return end

    -- DUY·ªÜT T·∫§T C·∫¢ WARDROBE TRONG PH√íNG
    for _, inst in ipairs(assets:GetDescendants()) do
        if inst.Name == "Wardrobe" and inst:IsA("Model") then
            ConvertWardrobe(inst)
        end
    end
end

-- √Åp d·ª•ng cho ph√≤ng ƒë√£ spawn
for _, room in ipairs(Rooms:GetChildren()) do
    ProcessRoom(room)
end

-- M·ªói l·∫ßn qua ph√≤ng m·ªõi ‚Üí ch·∫°y l·∫°i (fix spawn tr·ªÖ)
LatestRoom.Changed:Connect(function()
    task.wait(0.4)
    for _, room in ipairs(Rooms:GetChildren()) do
        ProcessRoom(room)
    end
end)

print("‚úÖ ALL wardrobes in ALL rooms converted successfully")

-- Remove lights
-- DOORS | AUTO REMOVE LIGHT_FIXTURES + CHANDELIERS
-- RUN 3 TIMES EVERY ROOM CHANGE
-- FIX LATE ASSET SPAWN (ROOM 8+)

local Rooms = workspace:WaitForChild("CurrentRooms")
local GameData = game.ReplicatedStorage:WaitForChild("GameData")
local LatestRoom = GameData:WaitForChild("LatestRoom")

local function CleanAllRooms()
    for _, room in ipairs(Rooms:GetChildren()) do
        local assets = room:FindFirstChild("Assets")
        if assets then
            -- X√≥a Light_Fixtures
            local lf = assets:FindFirstChild("Light_Fixtures")
            if lf then
                pcall(function()
                    lf:Destroy()
                end)
            end

            -- X√≥a Chandelier
            local ch = assets:FindFirstChild("Chandelier")
            if ch then
                pcall(function()
                    ch:Destroy()
                end)
            end
        end
    end
end

-- Ch·∫°y l·∫ßn ƒë·∫ßu (ph√≤ng hi·ªán t·∫°i)
for i = 1, 3 do
    CleanAllRooms()
    task.wait(0.15)
end

-- M·ªói l·∫ßn m·ªü ph√≤ng m·ªõi ‚Üí ch·∫°y l·∫°i 3 l·∫ßn
LatestRoom.Changed:Connect(function()
    task.spawn(function()
        for i = 1, 3 do
            CleanAllRooms()
            task.wait(0.15)
        end
    end)
end)

print("‚úÖ Auto-clean lights EVERY ROOM (3x per room)")

