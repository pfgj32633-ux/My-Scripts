local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local plr = Players.LocalPlayer
local cam = workspace.CurrentCamera
local latestRoomValue = game.ReplicatedStorage.GameData.LatestRoom

local DAMAGE_PER_SEC = 5
local SHAKE_POWER = 0.15

local part
local imageLabel
local humConnection
local renderConnection
local killedByEntity = false

-------------------------------------------------
-- SPAWN ENTITY
-------------------------------------------------
local function spawnEntity()
	local room = workspace.CurrentRooms:FindFirstChild(tostring(latestRoomValue.Value))
	if not room then return end
	
	local base = room:FindFirstChild("Base") or room:FindFirstChildWhichIsA("BasePart")
	if not base then return end
	
	part = Instance.new("Part")
	part.Size = Vector3.new(5,5,5)
	part.Anchored = true
	part.Transparency = 1
	part.CanCollide = false
	part.Position = base.Position + Vector3.new(0,5,0)
	part.Parent = workspace
	
	local light = Instance.new("PointLight", part)
	light.Range = 15
	light.Brightness = 5
	light.Color = Color3.fromRGB(0,0,255)
	
	local sound = Instance.new("Sound", part)
	sound.SoundId = "rbxassetid://4860560167"
	sound.Looped = true
	sound.Volume = 3
	sound.PlaybackSpeed = 3
	sound:Play()
	
	local billboard = Instance.new("BillboardGui", part)
	billboard.Size = UDim2.new(15,0,15,0)
	billboard.AlwaysOnTop = true
	billboard.StudsOffset = Vector3.new(0,0.3,0)
	billboard.Adornee = part
	
	imageLabel = Instance.new("ImageLabel", billboard)
	imageLabel.Size = UDim2.new(1,0,1,0)
	imageLabel.BackgroundTransparency = 1
	imageLabel.Image = "rbxassetid://104956664701555"
	
	renderConnection = RunService.RenderStepped:Connect(function()
		if imageLabel then
			local x = (math.random()-0.5)*SHAKE_POWER
			local y = (math.random()-0.5)*SHAKE_POWER
			billboard.StudsOffset = Vector3.new(x,0.3+y,0)
		end
	end)
end

-------------------------------------------------
-- CHECK NH√åN
-------------------------------------------------
local function isLooking()
	if not part then return false end
	
	local toPart = (part.Position - cam.CFrame.Position).Unit
	local dot = cam.CFrame.LookVector:Dot(toPart)
	if dot < 0.6 then return false end
	
	local _, onScreen = cam:WorldToViewportPoint(part.Position)
	return onScreen
end

-------------------------------------------------
-- DAMAGE
-------------------------------------------------
local function startDamage(hum)
	if humConnection then humConnection:Disconnect() end
	
	local timer = 0
	
	humConnection = RunService.Heartbeat:Connect(function(dt)
		if not part then return end
		
		if not isLooking() then
			timer += dt
			
			if timer >= 1 then
				hum:TakeDamage(5)
				killedByEntity = true
				timer = 0
			end
		else
			timer = 0 -- nh√¨n l·∫°i ‚Üí reset ƒë·∫øm
		end
	end)
end

